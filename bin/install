#! /bin/sh

echo "testing for pip for install"
which pip 2>&1 > /dev/null

if [ $? -eq 0 ];
then
    echo "pip found"
    (exec ./bin/install-pip)
    exit 0
fi

echo "testing for git for install"
which git 2>&1 > /dev/null

if [ $? -eq 0 ];
then
    echo "git found"
    (exec ./bin/install-git)
    exit 0
fi

echo "pip and git not found. unable to install."
exit 1
