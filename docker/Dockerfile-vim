FROM ubuntu:bionic

# install python, ruby and vim
RUN \
    apt-get update && \
    apt-get install -y python-pip python-virtualenv python3.7 python3.7-dev libpython3.7-dev ruby-full vim && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get autoremove -y && \
    apt-get clean

# link to python 3.7
RUN rm /usr/bin/python && ln -s /usr/bin/python3.7 /usr/bin/python

RUN gem install rspec

# install gdb
RUN apt-get update && apt-get install -y gdb
